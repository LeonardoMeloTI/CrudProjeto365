@model IEnumerable<CrudProjeto365.Models.Cliente>

@{
    ViewData["Title"] = "Index";
}

<h1 class="mt-5 pt-5">Seja Bem-Vindo</h1>

<p>
    <a asp-action="Create" class="mt-5">Cadastrar</a>
</p>
<table class="table mb-5">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Mensagem)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mensagem)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Pessoa_id">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.Pessoa_id">Visualizar</a> |
                <a asp-action="Delete" asp-route-id="@item.Pessoa_id">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
