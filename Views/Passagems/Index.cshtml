@model IEnumerable<CrudProjeto365.Models.Passagem>

@{
    ViewData["Title"] = "Index";
}

<h2 class="mt-5 pt-5">Seja Bem-Vindo</h2>

<p>
    <a asp-action="Create">Cadastrar</a>
</p>
<table class="table pb-5">
    <thead class="pb-5">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Destino)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Data)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Horario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Poltrona)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Classe)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Preço)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cliente)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Destino)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Data)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Horario)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Poltrona)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Classe)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Preço)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cliente.Cliente_id)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Passagem_id">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.Passagem_id">Visualizar</a> |
                <a asp-action="Delete" asp-route-id="@item.Passagem_id">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
