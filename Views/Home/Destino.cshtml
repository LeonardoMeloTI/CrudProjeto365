@{
    ViewData["Title"] = "Destino";
}

<section class="container">
    <div class="text-center my-5">
        <span class="h6 d-block">SEU DESTINO, SUA VIAGEM</span>
        <h1 class="display-4 text-primary">Conheça nossos Pacotes</h1>
    </div>
    <div class="row">
        <div class="col-md mb-5">
            <div class="bg-light rounded p-4 box-shadow">
                <h2>Pacote Europa</h2>
                <ul class="lista-plano list-unstyled">
                    <li><span data-toggle="tooltip" data-placement="top" title="Isso mesmo, são 30 dias totais durante a viagem.">→ 30 dias de viagem</span></li>
                    <li>→ 3 destinos diferentes</li>
                    <li>→ Tudo pago pela empresa</li>
                    <li>→ Ingressos para festas</li>
                </ul>
                <form>
                    <div class="form-group">
                        <select class="form-control bg-light" id="inputCidades">
                            <option>Selecione a cidade</option>
                            <option>Itália</option>
                            <option>França</option>
                            <option>Grécia</option>
                        </select>
                    </div>
                </form>
                <div class="row align-items-center mt-4">
                    <div class="col">
                        <a href="contato.html" class="btn btn-primary btn-lg btn-block">Comprar Pacote</a>
                    </div>
                    <div class="col">
                        <span class="h4">R$5.000</span>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md mb-5">
            <div class="bg-light rounded p-4 box-shadow">
                <h2>Pacote America Central <span class="badge badge-success">Novo</span></h2>
                <ul class="lista-plano list-unstyled">
                    <li>→ 60 dias de viagem</li>
                    <li>→ 6 destinos diferentes</li>
                    <li>→ Tudo pago pela empresa</li>
                    <li>→ Ingressos para festas</li>
                </ul>
                <form>
                    <div class="form-group">
                        <select class="form-control bg-light" id="inputCidades">
                            <option>Selecione a cidade</option>
                            <option>México</option>
                            <option>Guatemala</option>
                            <option>Costa Rica</option>
                            <option>Replúbica Dominicana</option>
                            <option>Nicarágua</option>
                            <option>Belize</option>
                        </select>
                    </div>
                </form>
                <div class="row align-items-center mt-4">
                    <div class="col">
                        <a href="contato.html" class="btn btn-primary btn-lg btn-block">Comprar Pacote</a>
                    </div>
                    <div class="col">
                        <span class="h4">R$7.500</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>